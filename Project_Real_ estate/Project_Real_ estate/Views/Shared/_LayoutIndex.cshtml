                                    <a class="dropdown-item" href="@Url.Action("IndexRentSearch","Home")"> Rent </a>
                                </li>
                                <li>
                                    @using (Html.BeginForm("ListPost", "Home", FormMethod.Post))
                                    {
                                        <input type="hidden" value="Sale" name="status" id="status" />
                                        <a class="dropdown-item" href="@Url.Action("ListPost", "Home",new {status = "" })" > Buy </a>
                                    }
                                </li>
                            </ul>*@
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" data-toggle="dropdown"> Agency </a>
                            <ul class="dropdown-menu dropdown-menu-left animate fade-up">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("AgencyList","Home")"> Agent </a>
