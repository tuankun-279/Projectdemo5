                                <div class="topbar-text">
                                    @DateTime.Now

                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4">
                            <div class="list-unstyled topbar-right">
                                <ul class="topbar-link">
                                    <li><a href="@Url.Action("SellerEdit", "Home", new {id = Convert.ToInt32(Session["SellerId"]) })" title="">@Session["Name"]</a></li>
                                    <li><a href="@Url.Action("Logout", "Home")" title="">Logout</a></li>
                                </ul>
                            </div>
                        </div>
