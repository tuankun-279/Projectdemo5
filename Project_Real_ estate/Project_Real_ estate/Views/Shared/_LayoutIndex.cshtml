                                <li>
                                    <a class="dropdown-item" href="@Url.Action("SellerList","Home")"> Seller </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact","Home")"> contact </a></li>
                    </ul>


                    <!-- Search bar.// -->
                    <ul class="navbar-nav ">
