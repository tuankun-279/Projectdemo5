@model Project_Real__estate.Models.Report
@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Send Email</h2>
<section class="section dashboard">
    <div class="row">

        <div class="col-lg-12">
            <div class="row">
                <div class="col-12">
                    <!-- css 807 217 -->
                    <div class="card recent-sales">
                        @using (Html.BeginForm("SendEmail", "Reports", FormMethod.Post))
                        {
                            @*@Html.AntiForgeryToken()*@

                            <div class="form-horizontal">
                                <h4>Advertisement</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ReportId)

                                <div class="form-group">
                                    Title
                                    <div class="col-md-10">
                                        @Html.TextBox("subject", null, new { @class = "title" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    Content
                                    <div class="col-md-10">
                                        @Html.TextArea("message", new { @class = "form-control", @cols = 100, @rows = 10 })
                                    </div>
                                </div>
                                @ViewBag.Mes
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <a class="btn btn-mini btn-outline-secondary "><input type="submit" value="Send" class="btn btn-default" /><i class="fas fa-paper-plane"></i></a>
                                    </div>
                                </div>
                            </div>}

                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    </div>
                </div>

                <div class="col-12">
                    <!-- css 824 217 -->
                    <div class="card top-selling">

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
<style>
    .title{width:800px;}
</style>

